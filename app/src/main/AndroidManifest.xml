<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vnapnic.project.debtmanager">
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:name=".Application"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:logo="@mipmap/ic_logo"
        android:theme="@style/AppTheme">

        <activity
            android:name="vnapnic.project.debtmanager.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="vnapnic.project.debtmanager.adddebt.AddDebtActivity"
            android:label="@string/title_activity_add_debt"
            android:parentActivityName="vnapnic.project.debtmanager.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vnapnic.project.debtmanager.MainActivity" />
        </activity>

        <activity
            android:name="vnapnic.project.debtmanager.adddebt.RepayDebtActivity"
            android:label="@string/title_activity_add_debt"
            android:parentActivityName="vnapnic.project.debtmanager.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vnapnic.project.debtmanager.MainActivity" />
        </activity>

        <activity
            android:name="vnapnic.project.debtmanager.adddebt.EditDebtActivity"
            android:label="@string/title_activity_add_debt"
            android:parentActivityName="vnapnic.project.debtmanager.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vnapnic.project.debtmanager.MainActivity" />
        </activity>

        <activity
            android:name=".frienddetails.FriendActivity"
            android:label="@string/title_activity_frienddetails"
            android:parentActivityName="vnapnic.project.debtmanager.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vnapnic.project.debtmanager.MainActivity" />
        </activity>

        <activity
            android:name="vnapnic.project.debtmanager.settings.SettingsActivity"
            android:label="@string/settings_activity_title"
            android:parentActivityName="vnapnic.project.debtmanager.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vnapnic.project.debtmanager.MainActivity" />
        </activity>
    </application>

</manifest>
