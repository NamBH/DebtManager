<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_start_friendslist_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
	android:padding="8dp" >

    <vnapnic.project.debtmanager.view.RoundedImageView
        android:id="@+id/fragment_start_friendslist_item_pic"
		android:layout_height="140dp"
        android:layout_width="140dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/contentDesc" />

    <LinearLayout
        android:id="@+id/fragment_start_friendslist_item_textBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/fragment_start_friendslist_item_pic"
		android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_start_friendslist_item_name"
            style="@style/FriendsList.Text"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/fragment_start_friendslist_item_amount"
            style="@style/FriendsList.Text"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/text" />
    </LinearLayout>

</RelativeLayout>
