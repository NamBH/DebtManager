<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_debthistory_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/fragment_debthistory_list_icon"
        android:layout_width="15dp"
        android:layout_height="70dp"
        android:contentDescription="@string/contentDesc"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/fragment_debthistory_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fragment_debthistory_list_icon"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="#888888"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/fragment_debthistory_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_debthistory_list_date"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/fragment_debthistory_list_icon"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-light"
        android:maxLines="3"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:textColor="@color/text"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/fragment_debthistory_list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fragment_debthistory_list_date"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-light"
        android:gravity="right"
        android:paddingRight="16dp"
        android:textColor="@color/text"
        android:textSize="28sp" />

</RelativeLayout>